generator client {
  provider = "prisma-client-js"
}

// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  // uncomment next line if you use Prisma <5.10
  // directUrl = env("DATABASE_URL_UNPOOLED")
}

model User {
  id               String    @id @default(uuid())
  email            String    @unique
  password         String
  name             String
  surname          String
  birthDate        DateTime  @default(now())
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  OAuthLogin       Boolean   @default(false)
  refreshTokenHash String?   @db.Text
  accounts         Account[]
  meeting          Meeting[]
}

model Account {
  id String @id @default(uuid())

  // OAuth provider data
  provider          String
  providerAccountId String
  userId            String
  user              User   @relation(fields: [userId], references: [id])

  // Tokens
  accessToken  String?
  refreshToken String?
  expiresAt    DateTime?
  tokenType    String?
  scope        String?

  // Google specific fields from token
  issuer          String?
  audience        String?
  authorizedParty String?
  jti             String?
  email           String?
  emailVerified   Boolean?
  name            String?
  givenName       String?
  familyName      String?
  picture         String?

  createdAt DateTime @default(now())

  @@unique([provider, providerAccountId])
}

model Meeting {
  id                       String        @id @default(uuid())
  name                     String
  link                     String
  type                     String
  duration                 String
  location                 String
  avaliability             String
  description              String
  allowInviteesToAddGuests Boolean       @default(true)
  linksOnConfirmationPage  String[]      @default([])
  notifications            Notification? @relation(fields: [notificationId], references: [id])
  host                     User          @relation(fields: [userId], references: [id])
  userId                   String
  notificationId           String?
  createdAt                DateTime      @default(now())
  updatedAt                DateTime      @updatedAt
}

model Notification {
  id            String    @id @default(uuid())
  emailReminder Boolean?  @default(false)
  emailFollowup Boolean?  @default(false)
  Meeting       Meeting[]
}
